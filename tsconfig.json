{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@services/*": ["core/data/services/*"],
      "@enum/*": ["core/data/enum/*"],
      "@pipes/*": ["pipes/*"],
      "@components/*": ["components/*"],
      "@directives/*": ["directives/*"],
      "@interfaces/*": ["core/data/interfaces/*"]
    }
  },
  "include": ["src/**/*.ts", "plugins/cordova-plugin-file/types/index.d.ts", "src/**/*.enum.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
